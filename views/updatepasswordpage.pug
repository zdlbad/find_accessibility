extends base

block append head
  link(href='/css/updatepassword.css' rel='stylesheet')

block content
  div.container(style="height:100vh;width:100vw;")
    div.box.center.middle(style="margin-left:-15vw;margin-top:-30vh;")
      div.dialog-box.container(style="padding-bottom:20vh;padding-top:1vh;")
        div.title
          h2 Update your profiles
        form#updatePasswordForm.box.center.middle(style="margin-left:-8vw;margin-top:-8vh;")
          div
            label(for="oldPassword") Old Password
            input(type="password" id="oldPassword" placeholder="Enter Old Password" required)
          div(style="margin-top:1vh;")
            label(for="newPassword") New Password
            input(type="password" id="newPassword" placeholder="Enter New Password" required)
          div(style="margin-top:1vh;")
            label(for="newPasswordConfirm") New Password Confirm
            input(type="password" id="newPasswordConfirm" placeholder="Enter New Password Again" required)
          div(style="margin-top:3vh;margin-bottom:2vh;margin-left:7vh")
            button.button(type="submit") Update

block append foot 
  script(src="http://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js")
  script(src="/js/updatepassword.js")