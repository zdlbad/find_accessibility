extends base

block append head
  link(href="/css/resetpassword.css" rel="stylesheet")

block content
  div#authUrl(data-authUrl= `${authUrl}`)
  div.container(style="height:100vh;width:100vw;")
    div.box.center.middle(style="margin-left:-15vw;margin-top:-30vh;")
      div.dialog-box.container(style="padding-bottom:25vh;padding-top:1vh;")
        div.title
          h2 Enter you new password
        form#resetPasswordForm.box.center.middle(style="margin-left:-8vw;margin-top:-10vh; width:50%")
          div
            label(for="newPassword") New Password
            input(type="password" id="newPassword" placeholder="Enter New Password" required)
          div(style="margin-top:2vh;")
            label(for="newPasswordConfirm") New Password Confirm
            input(type="password" id="newPasswordConfirm" placeholder="Enter New Password Again" required)
          div(style="margin-left:4vw;margin-top:7vh;;margin-bottom:20px;")
            button.button(type="submit") Reset

block append foot 
  script(src="http://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js")
  script(src="/js/resetpassword.js")