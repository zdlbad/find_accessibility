extends base

block append head
  link(href='/css/forgotpassword.css' rel='stylesheet')

block content
  div.container(style="height:100vh;width:100vw;")
    div.box.center.middle(style="margin-left:-15vw;margin-top:-30vh;")
      div.dialog-box.container(style="padding-bottom:15vh;padding-top:1vh;")
        div.title
          h2 Reset your password
        form#forgotPassword.box.center.middle(style="margin-left:-8vw;margin-top:-3vh; width:50%;")
          div
            label(for="userEmail") Type in your User Email:
            input(type="text" id="userEmail" placeholder="Enter User Email" required)
          div(style="margin-top:5vh;margin-bottom:2vh;margin-left:6vh")
            button.button(type="submit") Send reset link

block append foot
  script(src="http://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js")
  script(src="/js/forgotpassword.js")