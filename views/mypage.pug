extends base

block append head
  script(src='http://api.mapbox.com/mapbox-gl-js/v1.11.1/mapbox-gl.js')
  link(href='http://api.mapbox.com/mapbox-gl-js/v1.11.1/mapbox-gl.css' rel='stylesheet')
  link(href='/css/mypage.css' rel='stylesheet')

block content  

  div.three-column-container
    div.three-column-left.scrollable-vertical
      h3(style="text-align:center;")= `Hi, ${user.name}!`
      div(style="margin-left:3vw;")
        img#avatar-profile(src=`/image/users/${user.photo}`, alt="User Photo")
        div#userInfo(data-userid= `${user.id}`)
        div(style="margin-left:1vw;")
          a.button(href="/app/updatepage") Update profiles
          br
          a.button(href="/app/updatepassword") Update Password
          br
          a#logout.button Log out

    div#personalMap.map.three-column-middle

    div#locations-block.three-column-right.scrollable-vertical

    div#reviews-block.three-column-bottom.scrollable-horizontal

block append foot
  script(src="http://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js")
  script(src='/js/mypage.js')

